.picture_active {
    transition: transform 0.3s ease, -unity-background-image-tint-color 0.3s ease;
    transform: scale(1.05); /* lekko powiÄ™kszone */
    -unity-background-image-tint-color: rgb(255, 255, 255);
}

.picture_inactive {
    transition: transform 0.3s ease, -unity-background-image-tint-color 0.3s ease;
    transform: scale(0.95); /* lekko zmniejszone */
    -unity-background-image-tint-color: rgba(255, 255, 255, 0.2); /* bardziej przygaszone */
}

.character_name_active {
    transition: font-size 0.3s ease, translate 0.3s ease;
    font-size: 22px;
    translate: 10px 0;
    color: rgb(186, 255, 249);
}

.character_name_inactive {
    transition: font-size 0.3s ease, translate 0.3s ease;
    font-size: 20px;
    translate: 0 0;
    color: rgb(255, 249, 249);
}
